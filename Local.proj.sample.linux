<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Directory that contains KeePass Plugin Dev Tools libraries and binaries.
         Be sure to include trailing separator. -->
    <KeePassPluginDevToolsPath>/usr/lib/keepass2-plugin-dev/</KeePassPluginDevToolsPath>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="KeePass.exe">
      <!-- Full path to local installation of KeePass.exe -->
      <HintPath>/usr/lib/keepass2/KeePass.exe</HintPath>
    </Reference>
	<Reference Include="KeePassControl.dll">
      <HintPath>$(KeePassPluginDevToolsPath)KeePassControl.dll</HintPath>
    </Reference>
  </ItemGroup>  
</Project>
